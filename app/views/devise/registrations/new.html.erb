<div class="row text-center mt2">
  <div class="large-6 large-centered columns ">
    <h2>Sign up</h2>
  </div>
  <div class="large-4 large-centered columns">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <%= f.text_field :username, autofocus: true, placeholder: "Enter your username" %>
      <%= f.email_field :email, autofocus: true, placeholder: "Enter your email" %>
      <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Enter your password" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Repeat your password" %>
      <div><%= f.submit "Sign up", class: "button small" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
</div>